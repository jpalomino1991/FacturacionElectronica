@{
    ViewData["Title"] = "Home Page";
}


    <div class="row">
        <div class="col s4 offset-s4">
            <div class="card">
                <div class="card-content">
                    <h4 class="center-align">Acceso Anónimo</h4>
                    <div class="row">
                        <div class="input-field col s12">
                            <select>
                                <option value="" disabled selected>Seleccione</option>
                                <option value="1">Factura</option>
                                <option value="2">Boleta</option>
                                <option value="3">Nota de Crédito</option>
                                <option value="4">Nota de Débito</option>
                            </select>
                            <label>Tipo de Comprobante</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <label for="numero">Número</label>
                            <input id="numero" type="number" class="validate">
                        </div>
                        <div class="input-field col s6">
                            <label for="serie">Serie</label>
                            <input id="serie" type="number" class="validate">
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <label for="monto">Monto Total</label>
                            <input id="monto" type="number" class="validate">
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <label for="date">Fecha de Emisión</label>
                            <input id="date" type="text" class="datepicker">
                        </div>
                    </div>
                </div>
                <div class="card-action">
                    <button class="btn waves-effect waves-light" type="submit" name="action">
                        <i class="material-icons left">search</i>
                        Submit
                    </button>
                </div>
            </div>
        </div>
    </div>


@section Scripts {
    <script>
        $(document).ready(function () {
            var options = {
                'defaultDate': Date(),
                'format': 'dd-mm-yyyy',
                'showClearBtn': true
            };
            $('#date').datepicker(options);
            $('select').formSelect();
        });
    </script>
}