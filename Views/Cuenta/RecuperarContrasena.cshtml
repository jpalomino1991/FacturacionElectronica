@{
    ViewData["Title"] = "Recuperar Contraseña";
}

@model FacturacionElectronica.Models.ResetPasswordModel

<div class="row">
    <div class="col s10 offset-s1">
        <div class="card">
            <div class="row">
                <form class="col s12" asp-action="RecuperarContrasena">
                    <div class="card-content">
                        <h4 class="center-align">Recuperar Contraseña</h4>
                        <hr />
                        <div class="row">
                            <div class="input-field col s12">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="red-text text-darken-1"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <label asp-for="ConfirmPassword" class="control-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="red-text text-darken-1"></span>
                            </div>
                        </div>
                        <input type="hidden" asp-for="Email" class="form-control" />
                        <input type="hidden" asp-for="Token" class="form-control" />
                    </div>
                    <div asp-validation-summary="All" class="red-text text-darken-1"></div>
                    <div class="card-action" style="text-align: center">
                        <button class="btn waves-effect waves-light" id="consultar" type="submit" name="action">
                            <i class="material-icons left">arrow_forward</i>
                            Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<partial name="_LoadingPartial" />

@section Scripts {
    <script>
            $(document).ready(function () {
                $('#modal1').modal({ 'dismissible': false });
                $('#consultar').click(function () {
                    abrirModal(false);
                });
            });
    </script>
}