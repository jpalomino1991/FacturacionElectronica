@{
    ViewData["Title"] = "Listado de Comprobantes";
}

@model List<FacturacionElectronica.Models.ComprobanteAnonimo>

<div class="row">
    <div class="col s12 offset-s0">
        <div class="card">
            <div class="row">
                <div class="card-content">
                    <h4 class="center-align">Comprobantes</h4>
                    <hr />
                    @if (Model.Count > 0)
                    {
                        <table class="responsive-table">
                            <thead>
                                <tr>
                                    <th>Tipo Documento</th>
                                    <th>Serie - Número</th>
                                    <th>Monto Total (S/.)</th>
                                    <th>Fecha Emisión</th>
                                    <th>Estado Documento</th>
                                    <th>Estado SUNAT</th>
                                    <th>Descargar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ComprobanteAnonimo comprobante in Model)
                                {
                                <tr>
                                    <td>@comprobante.NombreTipoComprobante</td>
                                    <td>@comprobante.SerieNumero</td>
                                    <td>@comprobante.MontoTotal</td>
                                    <td>@comprobante.FechaComprobante</td>
                                    <td>@comprobante.NombreEstadoComprobante</td>
                                    <td>@comprobante.NombreEstadoComprobanteSUNAT</td>
                                    <td>
                                        <a href="../Consulta/DownloadXML/?codigo=@comprobante.CodigoComprobante" class="btn waves-effect waves-light xml">XML</a>
                                        <a href="../Consulta/DownloadPDF/?codigo=@comprobante.CodigoComprobante" class="btn waves-effect waves-light pdf">PDF</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No tiene comprobantes asociados a su documento</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_LoadingPartial" />


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#modal1').modal({ 'dismissible': false });
            $('.xml').click(function () {
                abriModal(true);
            });
            $('.pdf').click(function () {
                abriModal(true);
            });
        });
    </script>
}